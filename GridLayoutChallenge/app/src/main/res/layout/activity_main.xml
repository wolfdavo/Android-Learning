<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <android.support.v7.widget.GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:columnCount="2"
        app:rowCount="4">


        <Button
            android:id="@+id/birds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birds"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="0"
            app:layout_row="0"
            android:onClick="playSound"
            android:tag="0"
            />

        <Button
            android:id="@+id/icecubes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ice Cubes"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="1"
            app:layout_row="0"
            android:onClick="playSound"
            android:tag="1"

            />

        <Button
            android:id="@+id/musclecar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Muscle Car"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="0"
            app:layout_row="1"
            android:onClick="playSound"
            android:tag="2"

            />

        <Button
            android:id="@+id/oldcar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Old Car Starting"
            app:layout_columnWeight="0.5"
            app:layout_rowWeight="1"
            app:layout_column="1"
            app:layout_row="1"
            android:onClick="playSound"
            android:tag="3"

            />

        <Button
            android:id="@+id/poker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Poker Chips"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="0"
            app:layout_row="2"
            android:onClick="playSound"
            android:tag="4"

            />

        <Button
            android:id="@+id/slots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slot Machine"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="1"
            app:layout_row="2"
            android:onClick="playSound"
            android:tag="5"

            />

        <Button
            android:id="@+id/sos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SOS"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="0"
            app:layout_row="3"
            android:onClick="playSound"
            android:tag="6"
            />

        <Button
            android:id="@+id/steamtrain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steam Train"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="1"
            app:layout_row="3"
            android:onClick="playSound"
            android:tag="7"
            />


    </android.support.v7.widget.GridLayout>
</android.support.constraint.ConstraintLayout>